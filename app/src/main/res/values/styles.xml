<resources>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="horizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c0c0c0</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="Gamesight" parent="AppTheme" />

    <style name="cardGalleryRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginEnd">@dimen/card_recycler_view_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/card_recycler_view_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/card_recycler_view_vertical_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_recycler_view_vertical_padding</item>
    </style>

    <style name="collapsibleToolbarStyle">
        <item name="android:textSize">@dimen/collapsing_bar_text_size</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="cardToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/card_toolbar_height</item>
    </style>

    <style name="appTitle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="cardToolbarTitleText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:padding">@dimen/card_toolbar_title_padding</item>
        <item name="android:textSize">@dimen/card_toolbar_title_text_size</item>
    </style>

    <style name="detailsContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/detail_layout_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/detail_layout_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/detail_layout_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/detail_layout_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/detail_layout_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/detail_layout_vertical_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="emptyViewTextStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/card_recycler_view_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_recycler_view_vertical_padding</item>
        <item name="android:paddingStart">@dimen/card_recycler_view_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/card_recycler_view_horizontal_padding</item>
        <item name="android:textColor">@color/emptyViewMessage</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
