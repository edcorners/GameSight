<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="@dimen/search_result_layout_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_game_cover_frame">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/notification_game_thumb"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="6dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_text_layout"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notification_game_cover_frame">

        <TextView
            android:text="Gamesight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification_title"
            android:textSize="18sp"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            tools:textStyle="bold"
            android:paddingStart="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Game is launching today!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification_description"
            android:paddingStart="4dp"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:typeface="normal" />

    </LinearLayout>
</RelativeLayout>