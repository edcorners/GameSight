<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/widget_thumb_size"
    android:layout_height="@dimen/widget_thumb_size"
    android:id="@+id/widget_item_layout">

    <ImageView
        android:layout_width="@dimen/widget_thumb_size"
        android:layout_height="@dimen/widget_thumb_size"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/widget_item_thumb"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/card_thumb_margin"
        android:padding="@dimen/card_thumb_padding"
        android:background="@android:color/background_dark"/>

    <TextView
        android:id="@+id/widget_scrim_text"
        android:layout_width="@dimen/widget_thumb_size"
        android:layout_height="@dimen/widget_scrim_height"
        android:background="@drawable/scrim_upwards_gradient"
        android:elevation="@dimen/grid_scrim_text_elevation"
        android:layout_alignBottom="@+id/detail_backdrop"
        android:text="Apr 12, 2016"
        android:gravity="bottom|right"
        android:textSize="@dimen/widget_scrim_text_size"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        android:paddingEnd="@dimen/grid_scrim_text_padding"
        android:paddingBottom="@dimen/grid_scrim_text_padding"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>