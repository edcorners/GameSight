<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="180dp">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/widget_item_thumb"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/card_thumb_margin"
        android:padding="@dimen/card_thumb_padding"
        android:background="@android:color/background_dark"/>

    <TextView
        android:id="@+id/grid_item_scrim_text"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@drawable/scrim_upwards_gradient"
        android:elevation="@dimen/grid_scrim_text_elevation"
        android:layout_alignBottom="@+id/detail_backdrop"
        android:text="Apr 12, 2016"
        android:gravity="bottom|right"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        android:paddingEnd="@dimen/grid_scrim_text_padding"
        android:paddingBottom="@dimen/grid_scrim_text_padding"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />
</RelativeLayout>